@model LoginSignup.ViewModel.EmployeeListViewModel;


<div class="d-flex justify-content-between my-3">
    <h2>All Employee Details </h2>

    <a href="@Url.Action("AddEmployee", "Employee")" class="btn btn-primary mt-2">Add Employee</a>
    <a href="@Url.Action("Index", "Home")" class="btn btn-success mt-2">Back</a>

</div>
<div class="row row-cols-1 row-cols-md-3 g-4">


    @foreach (var employee in Model.Employee)
    {
        <div class="col">


            <div class="card pie-card">
                <img src="@employee.ImageUrl" class="card-img-top img" alt="@employee.Name">
                <div class="card-body pie-button">

                    <div class="d-flex justify-content-between mt-2">
                        <h2 class="text-start">
                            <a class="pie-link text-decoration-none text-dark">@employee.Name</a>

                        </h2>
                        <h3>@employee.Address</h3>

                    </div>
                    <div class="d-flex justify-content-between">

                        <a href="@Url.Action("UpdateEmployee", "Employee", new { id = employee.EmployeeId })" class="btn btn-primary mt-2">Edit Employee</a>


                        <a href="@Url.Action("DeleteEmployee", "Employee", new { id = employee.EmployeeId })" class="btn btn-danger mt-2">Delete</a>
                    </div>

                </div>
            </div>

        </div>
    }

</div>